{
  "extends": "../tsconfig.json",
  "composite": true,
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "../build/data/src",
    "lib": ["dom", "es5", "es6"],
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true
  },
  "references": [{ "path": "../core-backend" }],
  "include": ["./src", "../core-backend/src/**/*.d.ts"],
  "exclude": ["../../node_modules", "node_modules", "build"]
}
