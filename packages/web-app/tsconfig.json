{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "lib": ["dom", "es6"],
    "allowJs": false,
    "jsx": "react-jsx",
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "references": [
    {
      "path": "../api-interfaces"
    }
  ],
  "include": ["src", "@types", "../api-interfaces/src/**/*.d.ts", "./test"],
  "exclude": ["../../node_modules", "node_modules", "build"],
  "types": ["node", "mocha"]
}
